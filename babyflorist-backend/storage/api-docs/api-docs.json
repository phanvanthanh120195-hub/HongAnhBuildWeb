    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/about-us": {
            "get": {
                "tags": [
                    "About Us"
                ],
                "summary": "Lấy thông tin Về chúng tôi",
                "description": "Trả về thông tin giới thiệu, hình ảnh, và các liên kết mạng xã hội",
                "operationId": "getAboutUs",
                "responses": {
                    "200": {
                        "description": "Thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Hồng Anh"
                                                },
                                                "image": {
                                                    "type": "string",
                                                    "example": "about-us/image.jpg"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "example": "<p>Mô tả...</p>"
                                                },
                                                "facebook": {
                                                    "type": "string",
                                                    "example": "https://facebook.com/..."
                                                },
                                                "instagram": {
                                                    "type": "string",
                                                    "example": "https://instagram.com/..."
                                                },
                                                "phone": {
                                                    "type": "string",
                                                    "example": "0123456789"
                                                },
                                                "zalo": {
                                                    "type": "string",
                                                    "example": "0123456789"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "contact@example.com"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/categories": {
            "get": {
                "tags": [
                    "Danh mục sản phẩm"
                ],
                "summary": "Lấy danh sách danh mục",
                "description": "Trả về danh sách tất cả danh mục sản phẩm đang hoạt động",
                "operationId": "getCategoriesList",
                "responses": {
                    "200": {
                        "description": "Thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Hoa sinh nhật"
                                                    },
                                                    "slug": {
                                                        "type": "string",
                                                        "example": "hoa-sinh-nhat"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "Các loại hoa dành cho sinh nhật"
                                                    },
                                                    "parent_id": {
                                                        "type": "integer",
                                                        "example": null,
                                                        "nullable": true
                                                    },
                                                    "sort_order": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "is_active": {
                                                        "type": "boolean",
                                                        "example": true
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/categories/{id}": {
            "get": {
                "tags": [
                    "Danh mục sản phẩm"
                ],
                "summary": "Lấy chi tiết danh mục",
                "description": "Trả về thông tin chi tiết của một danh mục theo ID",
                "operationId": "getCategoryById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID của danh mục",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Thành công"
                    },
                    "404": {
                        "description": "Không tìm thấy danh mục"
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get list of products",
                "description": "Returns list of products",
                "operationId": "getProductsList",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "About Us",
            "description": "About Us"
        },
        {
            "name": "Danh mục sản phẩm",
            "description": "Danh mục sản phẩm"
        },
        {
            "name": "Products",
            "description": "Products"
        }
    ]
}